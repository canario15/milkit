<div class="card">
    <div class="card-header">
      <strong>Perfil</strong>
    </div>
    <%= form_with(model: @user, local: true, class: "form-horizontal") do |f| %>
      <div class="card-body card-block">
        <div class="row form-group">
          <div class="col-12 col-md-9">
            <%= image_tag(@user.display_avatar) %>
          </div>
        </div>
        <div class="row form-group">
          <div class="col col-md-3">
            <%= f.label :avatar, class: "form-control-label" %>
          </div>
          <div class="col-12 col-md-9">
            <div class="input-group">
              <div class="custom-file">
                <%= f.file_field :avatar, class: "custom-file-input" %>
                <label class="custom-file-label" >Seleccione..</label>
              </div>
            </div>
          </div>
        </div>
        <div class="row form-group">
          <div class="col col-md-3">
            <%= f.label :email, class: "form-control-label" %>
          </div>
          <div class="col-12 col-md-9">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <div class="col col-md-3">
            <%= f.label :password, class: "form-control-label" %>
          </div>
          <div class="col-12 col-md-9">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <div class="col col-md-3">
            <%= f.label :password_confirmation, class: "form-control-label" %>
          </div>
          <div class="col-12 col-md-9">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <div class="col col-md-3">
            <%= f.label :current_password, class: "form-control-label" %>
          </div>
          <div class="col-12 col-md-9">
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <%= f.submit "Guardar", class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  <% end %>
    