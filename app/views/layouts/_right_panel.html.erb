<div id="right-panel" class="right-panel">
  <!-- Header-->
  <header id="header" class="header">
    <div class="top-left">
      <div class="navbar-header">
        <a class="navbar-brand" href="/"><%= image_tag 'logo.png' %></a>
        <a class="navbar-brand hidden" href="/"><%= image_tag 'logo2.png', alt: 'logo' %></a>
        <a id="menuToggle" class="menutoggle"><i class="fa fa-bars"></i></a>
      </div>
    </div>
    <div class="top-right">
      <div class="header-menu">
        <div class="user-area dropdown float-right">
          <a href="#" class="dropdown-toggle active" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= image_tag(current_user.display_avatar, class: "user-avatar rounded-circle") %>
          </a>
          <div class="user-menu dropdown-menu">
            <%= link_to edit_user_path(current_user.id), class: "nav-link" do %>
              <i class="fa fa-user"></i>Perfil
            <% end %>
            <%= link_to destroy_user_session_path, method: "delete", class: "nav-link" do %>
              <i class="fa fa-power-off"></i>Salir
            <% end %>  
          </div>
        </div>
      </div>
    </div>
  </header>
  <!-- /#header -->
  <!-- Content -->
  <div class="content">
    <%= yield %>
  </div>
  <!-- /.content -->
  <div class="clearfix"></div>

  <footer class="site-footer">
    <div class="footer-inner bg-white">
      <div class="row">
        <div class="col-sm-6">
          Copyright &copy; 2019 Milkit Admin
        </div>
        <div class="col-sm-6 text-right">
          Designed by 
          <a href="https://www.linkedin.com/in/gfagalde" target="_blank" >
            <%= image_tag 'milogo.png', alt: "", height:"30px" %>
          </a>
        </div>
      </div>
    </div>
  </footer>
  <!-- /.site-footer -->
</div>
<!-- /#right-panel -->
